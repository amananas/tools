[git-p4]
	detectRenames = true
	skipSubmitEdit = true
[user]
	email = example@example.com
	name = Example Example
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"
[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[core]
	editor = gedit --wait
